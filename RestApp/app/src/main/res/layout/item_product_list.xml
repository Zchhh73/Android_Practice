<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/item_bg"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <ImageView
        android:id="@+id/id_iv_image"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/id_iv_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="下饭食堂"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="下饭食堂下饭食堂下饭食堂下饭食堂下饭食堂" />


    </LinearLayout>
    
    <TextView
        android:id="@+id/id_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_iv_image"
        android:text="30元"
        android:textStyle="bold"
        android:layout_toRightOf="@id/id_iv_image"
        android:layout_marginLeft="8dp"
        android:textColor="#fd8f50"/>
    
    <ImageView
        android:id="@+id/id_iv_sub"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sub"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_alignParentRight="true"/>
    
    <TextView
        android:id="@+id/id_tv_count_prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/id_iv_sub"
        android:layout_alignBottom="@id/id_iv_image"
        android:text="2"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"/>


    <ImageView
        android:id="@+id/id_iv_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/add"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_toLeftOf="@id/id_tv_count_prod"
        />

    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#444444"/>
    


</RelativeLayout>